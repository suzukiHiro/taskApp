<h3>新規登録</h3>
<div class="field">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true, :class => "input" %>

  <%= f.label :email %>
  <%= f.email_field :email, :class => "input" %>

  <%= f.label :password %>
  <%= f.password_field :password, autocomplete: "off", :placeholder => "#{@minimum_password_length}文字以内", :class => "input" %>

   <%= f.label :password_confirmation %>
   <%= f.password_field :password_confirmation, autocomplete: "off", :class => "input" %>


  <%= f.label :role %>
  <div class="picker"><%= f.select :role, User::ROLE_OPTIONS %></div>

  <div class="medium info btn pull_right"><%= f.submit "　Sign up　" %></div>
<% end %>
</div>